<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.member.model.mapper.MemberMapper">

    <resultMap id="memberDto" type="member">
        <result column="id" property="userId" />
        <result column="password" property="userPwd" />
        <result column="name" property="userName" />
        <result column="address" property="address" />
        <result column="phone" property="phone" />
        <result column="grade" property="grade" />
    </resultMap>

    <select id="selectMember" parameterType="member" resultMap="memberDto">
        select id, name, password, address, phone, grade
        from user
        where id = #{userId} and
              password = #{userPwd}
    </select>

    <select id="idCheck" parameterType="string" resultType="int">
        select COUNT(id)
        from user
        where id = #{userId}
    </select>

    <insert id="insertMember" parameterType="member">
        insert into user (id,password,name,address,phone)
        value (#{userId},#{userPwd},#{userName},#{address},#{phone})
    </insert>

    <select id="searchPwd" parameterType="member" resultType="string" >
        select password
        from user
        where name = #{userName} and
              id = #{userId}
    </select>

    <update id="updatePass" parameterType="map">
        update user
        set password = #{newPass}
        where id = #{userId} and name = #{userName}
    </update>

    <update id="updateMember" parameterType="member">
        update user
        <set>
            <if test="userName != '' or userName != null">
                name = #{userName},
            </if>
            <if test="userPwd != '' or userPwd != null">
                password = #{userPwd},
            </if>
            <if test="address != '' or address != null">
                address = #{address},
            </if>
            <if test="phone != '' or phone != null">
                phone = #{phone},
            </if>
        </set>
        where id = #{userId};
    </update>

    <delete id="deleteMember" parameterType="string">
        delete from user
        where id = #{userId}
    </delete>
</mapper>